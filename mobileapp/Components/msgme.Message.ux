<Panel ux:Class="msgme.Message" Margin="10" Padding="10" FontSize="14">
	<string ux:Property="Text" />
	<float ux:Property="FontSize" />
	<Rectangle Layer="Background" Color="#00CDFF" CornerRadius="10">
		<DropShadow Angle="90" Distance="1" Spread="0.2" Size="2" Color="#00000060" />
	</Rectangle>
	<Text Value="{ReadProperty Text}" FontSize="{ReadProperty FontSize}" TextAlignment="Center" />
</Panel>